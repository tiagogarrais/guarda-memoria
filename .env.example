# Configurações do NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Configurações de Email
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Banco de Dados MySQL (Desenvolvimento Local)
BD_USER=devuser
BD_NAME=guarda_memoria_dev
BD_HOST_NAME=localhost
BD_HOST_IP=127.0.0.1
BD_PASSWORD=devpassword
DATABASE_URL="mysql://devuser:devpassword@localhost:3306/guarda_memoria_dev"

# FTP (Opcional - para upload de arquivos)
FTP_HOST=your-ftp-host
FTP_USER=your-ftp-user
FTP_PORT=21
FTP_PASSWORD=your-ftp-password
FTP_BASE_PATH=your-base-path
DIRETORIO=/path/to/files
