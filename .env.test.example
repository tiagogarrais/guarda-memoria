# Arquivo de exemplo para testes
# Copie este arquivo para .env.test e configure com suas credenciais

# Banco de dados de teste (crie uma base separada)
DATABASE_URL="mysql://usuario:senha@localhost:3306/guarda_memoria_test"

# NextAuth (valores de teste)
NEXTAUTH_SECRET="test-secret-key-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# FTP (opcional para testes de upload)
FTP_HOST="localhost"
FTP_USER="test"
FTP_PASSWORD="test"
FTP_PORT=21

# Email (mocado nos testes)
EMAIL_FROM="test@guardamemoria.com"
EMAIL_SERVER_HOST="smtp.test.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="test"
EMAIL_SERVER_PASSWORD="test"