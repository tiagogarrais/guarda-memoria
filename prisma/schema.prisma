generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Modelo baseado no esquema recomendado para NextAuth + Prisma
model Account {
  id                 String    @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?   @db.Text
  access_token       String?   @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?   @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       Usuario?  // Perfil do usuário (opcional)
}

model Usuario {
  id                String   @id @default(uuid())
  userId            String   @unique // Relacionamento 1:1 com User
  fullName          String?  // Nome completo editável
  birthDate         DateTime? // Data de nascimento
  cpf               String?  @unique // CPF único
  whatsapp          String?  // Número de WhatsApp (opcional)
  whatsappCountryCode String? @default("55") // Código DDI do país (padrão Brasil)
  whatsappConsent   Boolean  @default(false) // Consentimento para comunicações
  bio               String?  @db.Text // Bio do perfil
  fotoPerfilUrl     String?  // URL da foto de perfil via FTP
  cidadesFavoritas  String?  @db.Text // JSON array de cidades favoritas
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  entidades   Entidade[]  // Alterado de pessoas para entidades
  pessoas     Pessoa[]    // Adicionado para compatibilidade
  comentarios Comentario[]
  medias      Media[]
  curtidas    Curtida[]
  logs        Log[]
  denuncias   Denuncia[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Enum para tipos de entidade
enum TipoEntidade {
  PESSOA
  LUGAR
  DATA
  EVENTO
  OBRA_ARTE
  COLETIVO_ORGANIZADO
}

// Novas tabelas para Guarda Memória

model Cidade {
  id         String @id @default(uuid())
  estado     String // Ex.: "SP"
  nome       String // Ex.: "São Paulo"
  codigoIbge String? @unique // Opcional, para referência

  entidades Entidade[]
  pessoas   Pessoa[] // Adicionado para compatibilidade

  @@unique([estado, nome])
}

model Entidade {
  id             String       @id @default(uuid())
  tipo           TipoEntidade
  nome           String
  descricao      String?      @db.Text // História ou descrição
  fotoUrl        String?      // URL da foto via FTP
  cidadeId       String
  usuarioId      String       // Quem indicou
  // Campos específicos por tipo
  dataNascimento DateTime?    // Para pessoas
  profissao      String?      // Para pessoas
  categoria      String?      // Para pessoas/lugares/eventos
  tags           String?      @db.Text // JSON array de tags
  // Para lugares
  localizacao    String?      // Endereço ou coordenadas
  // Para datas/eventos
  dataRelacionada DateTime?   // Data específica
  dataInicio     DateTime?    // Para eventos
  dataFim        DateTime?    // Para eventos
  // Para obras de arte
  artista        String?      // Nome do artista
  anoCriacao     Int?         // Ano de criação
  tecnica        String?      // Técnica utilizada
  arquivoUrl     String?      // URL do arquivo da obra via FTP
  tipoArquivo    String?      // Tipo do arquivo (imagem, audio, video, documento, etc.)
  tamanhoArquivo Int?         // Tamanho do arquivo em bytes
  nomeArquivo    String?      // Nome original do arquivo
  // Para coletivos organizados
  membrosPrincipais String?   @db.Text // JSON array com nomes dos membros principais
  dataFormacao   DateTime?    // Data de formação do coletivo
  tipoColetivo   String?      // Tipo do coletivo (musical, esportivo, cultural, etc.)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  cidade     Cidade       @relation(fields: [cidadeId], references: [id])
  usuario    Usuario      @relation(fields: [usuarioId], references: [id])
  comentarios Comentario[]
  medias     Media[]
  curtidas   Curtida[]
  denuncias Denuncia[]   @relation("DenunciaEntidade")

  @@index([cidadeId])
  @@index([tipo])
}

// Tabela Pessoa mantida para compatibilidade durante migração
model Pessoa {
  id             String   @id @default(uuid())
  nome           String
  historia       String?  @db.Text
  fotoUrl        String?  // URL da foto via FTP
  cidadeId       String
  usuarioId      String   // Quem indicou
  dataNascimento DateTime?
  profissao      String?
  categoria      String?  // Ex.: "artista", "líder comunitário"
  tags           String?  @db.Text // JSON array de tags
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  cidade     Cidade      @relation(fields: [cidadeId], references: [id])
  usuario    Usuario     @relation(fields: [usuarioId], references: [id])
  comentarios Comentario[]
  medias     Media[]
  denuncias Denuncia[] @relation("DenunciaPessoa") // Denúncias sobre a pessoa

  @@index([cidadeId])
}

model Comentario {
  id        String   @id @default(uuid())
  pessoaId  String   // Manter temporariamente para migração
  entidadeId String? // Novo campo opcional
  usuarioId String
  texto     String   @db.Text
  createdAt DateTime @default(now())

  pessoa    Pessoa?    @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
  entidade  Entidade?  @relation(fields: [entidadeId], references: [id], onDelete: Cascade)
  usuario   Usuario    @relation(fields: [usuarioId], references: [id])
  denuncias Denuncia[] @relation("DenunciaComentario") // Denúncias sobre o comentário

  @@index([pessoaId])
  @@index([entidadeId])
}

model Media {
  id        String   @id @default(uuid())
  pessoaId  String   // Manter temporariamente para migração
  entidadeId String? // Novo campo opcional
  usuarioId String
  tipo      String   // "foto", "video", "audio"
  url       String   // URL via FTP
  createdAt DateTime @default(now())

  pessoa   Pessoa?   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
  entidade Entidade? @relation(fields: [entidadeId], references: [id], onDelete: Cascade)
  usuario  Usuario   @relation(fields: [usuarioId], references: [id])

  @@index([pessoaId])
  @@index([entidadeId])
}

model Curtida {
  entidadeId String
  usuarioId  String
  createdAt  DateTime @default(now())

  entidade Entidade @relation(fields: [entidadeId], references: [id], onDelete: Cascade)
  usuario  Usuario  @relation(fields: [usuarioId], references: [id])

  @@unique([entidadeId, usuarioId]) // Uma curtida por usuário/entidade
  @@index([entidadeId])
}

model Log {
  id        String   @id @default(uuid())
  usuarioId String?
  acao      String   // Ex.: "cadastro_pessoa", "comentario", "curtida"
  detalhes  String?  @db.Text // JSON com detalhes
  timestamp DateTime @default(now())

  usuario Usuario? @relation(fields: [usuarioId], references: [id])

  @@index([usuarioId])
  @@index([timestamp])
}

model Denuncia {
  id           String   @id @default(uuid())
  pessoaId     String?  // Manter temporariamente para migração
  entidadeId   String?  // Novo campo opcional
  comentarioId String?
  usuarioId    String   // Quem denunciou
  motivo       String   @db.Text
  status       String   @default("pendente") // "pendente", "resolvido", "rejeitado"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  pessoa     Pessoa?     @relation("DenunciaPessoa", fields: [pessoaId], references: [id], map: "DenunciaPessoa_fkey")
  entidade   Entidade?   @relation("DenunciaEntidade", fields: [entidadeId], references: [id], map: "DenunciaEntidade_fkey")
  comentario Comentario? @relation("DenunciaComentario", fields: [comentarioId], references: [id], map: "DenunciaComentario_fkey")
  usuario    Usuario     @relation(fields: [usuarioId], references: [id])

  @@index([pessoaId])
  @@index([entidadeId])
  @@index([comentarioId])
}
