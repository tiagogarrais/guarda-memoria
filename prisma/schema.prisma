generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model State {
  id        Int     @id
  name      String  @unique
  sigla     String  @unique
  cities    City[]
}

model City {
  id        Int     @id
  name      String
  slug      String  @unique // Slug único: nome-da-cidade-sigla-estado
  stateId   Int
  state     State   @relation(fields: [stateId], references: [id])
  users     User[]  // Usuários que têm esta cidade como localização
  medias    Media[] // Mídias desta cidade

  @@index([stateId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  stateId       Int?      // ID do estado (ex: 11 para Rondônia)
  cityId        Int?      // ID da cidade (ex: 1100015)
  city          City?     @relation(fields: [cityId], references: [id])
  accounts      Account[]
  sessions      Session[]
  medias        Media[]
  knowledge     MediaKnowledge[] // Relacionamento com conhecimentos
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Media {
  id        String   @id @default(cuid())
  publicId  String?  @unique // ID único do Cloudinary (opcional para texto)
  url       String?  // URL pública do arquivo (opcional para texto)
  text      String?  // Texto da mensagem (opcional)
  type      String   // "image", "video", "audio", "text"
  categories String? // JSON array com categorias: ["local", "pessoa", "historia"]
  userId    String   // Relaciona com o usuário
  stateId   Int      // ID do estado
  cityId    Int      // ID da cidade
  city      City     @relation(fields: [cityId], references: [id])
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentId  String?  // Novo campo: ID da mídia pai (para comentários)
  parent    Media?   @relation("MediaReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Media[]  @relation("MediaReplies") // Relacionamento para respostas
  knowledge MediaKnowledge[] // Relacionamento com conhecimentos

  @@index([userId])
  @@index([stateId, cityId])
  @@index([parentId]) // Novo índice para buscas eficientes
}

model MediaKnowledge {
  id       String @id @default(cuid())
  userId   String
  mediaId  String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  media    Media  @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, mediaId]) // Um usuário só pode conhecer uma mídia uma vez
  @@index([userId])
  @@index([mediaId])
}